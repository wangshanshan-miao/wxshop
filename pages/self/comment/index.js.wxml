<!--pages/self/comment/index.js.wxml-->
<view class="line"></view>

<view class="list flex_row al jb" wx:for="{{list}}" wx:key="commodityId">
	<image class="good" src="{{imgBaseUrl + item.coverUrl+'?x-image-process=image/resize,p_30'}}"></image>
	<view class="content flex_col jb">
		<view class="title c22 f28">
			{{item.commodityName}}
		</view>
		<view class="price">
			￥{{item.salePrice}}<text>元</text>
		</view>
	</view>
</view>

<textarea bindinput="inputValue" placeholder="宝贝满足你的期待吗？说说它的优点和美中不足的地方吧！" placeholder-style="color:#B9B9B9;fontSize:28rpx">
</textarea>

<view class="upload flex_row al jc">
	<image catchtap="upload" wx:if="{{evaluateUrl}}" src="{{imgBaseUrl + evaluateUrl+'?x-image-process=image/resize,p_30'}}" class="picture"></image>
	<image wx:else catchtap="upload" class="camera" src="../../../img/camera.png"></image>
</view>

<view bindtap="submit" class="submit f28 flex_row al jc">提交</view>