<!-- 判断订单状态 -->
<wxs src="../../../utils/status.wxs" module="tools" />
<!-- 测量订单 -->
<view class="orderModel boxs">
    <view class="orderTabs boxs flex_row jb">
        <view wx:for="{{tabarr}}" bindtap="changeTab" data-index='{{index}}' wx:key="index" class=" pr orderTabs_list f30 c99 {{orderTabsIndex==index?'choseOrderTab':''}}">
            {{item}}
        </view>
    </view>
    <view class="shopOrderList" wx:for="{{list}}" wx:key="index" catchtap="goDetail" data-index="{{index}}" data-id="{{item.orderId}}">
        <view class="goodOrder boxs">
            <view class="flex_row jb al goodOrder_top">
                <view class="flex_row al">
                    <image class="shop_icon" src="../../../img/shop_icon.png" />
                    <view class='f30 c33 fb shopOrder_name'>{{item.merchantName}}</view>
                    <image src="../../../img/rjt.png" class="goShopImg" />
                </view>
                <view class='orderState f30'>{{tools.status(item.orderStatus)}}</view>
            </view>
            <view class="goodOrder_list" wx:for="{{item.orderCommodityDtoList}}" wx:key="index">
                <view class="flex_row">
                    <image class="goodOrder_list_img" src="{{imgBaseUrl + item.coverUrl+'?x-image-process=image/resize,p_30'}}" mode="aspectFit" />
                    <view class="">
                        <view class='f28 goodName c33'>{{item.commodityName}}</view>
                        <view class='flex_row goodOrder_list_num'>
                            <view class="f32 goodOrder_list_money fb">
                                ￥{{item.salePrice}}
                                <text class='unitMy' wx:if="{{item.unit}}">/{{item.unit}}</text>
                            </view>
                            <!-- <view class="f22 c99">/平方米</view> -->
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view class="shopOrderList_foot flex_row jb">
            <view class="f26 c99">共{{item.orderCommodityDtoList.length}}件商品</view>
            <view class="foot_btn_group flex_row">
                <view catchtap="cancel" data-id="{{item.orderId}}" wx:if="{{item.orderStatus==5}}" class="cancle_btn tc f26 c99">
                    取消测量
                </view>
                <!-- <view wx:if="{{item.orderStatus==6}}" class="sure_btn tc f26 cff">确认测量</view> -->
            </view>
        </view>
        <view class="line"></view>
    </view>
</view>
<noData wx:if="{{list.length<1}}" />