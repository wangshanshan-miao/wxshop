<view class="line"></view>
<view class="container">
    <view class="scTabs flex_row jc al">
        <view bindtap="changeScTab" data-index='{{0}}' class="f28 c99 tc scTab_cell scTab_cell_one {{scTabIndex==0?'scTabChose':''}}">
            商品收藏
        </view>
        <view bindtap="changeScTab" data-index='{{1}}' class="f28 c99 scTab_cell scTab_cell_two tc {{scTabIndex==1?'scTabChose':''}}">
            商家收藏
        </view>
    </view>
</view>
<!-- 商品收藏 -->
<view wx:if="{{scTabIndex==0}}" class="photos boxs">
    <!-- <view class="list" > -->
    <view class="list-item" wx:for="{{list}}" data-id="{{item.commodityId}}" wx:key="index" catchtap="handleTap">
        <view class="item-content">
            <image class="avatar" src="{{imgBaseUrl + item.coverUrl+'?x-image-process=image/resize,p_30'}}" mode="widthFix" />
            <view class="content">
                <view class="f28 oh">{{item.commodityName}}</view>
                <view class="f26 hasBuy_num c99">{{item.amount}}人付款</view>
                <view class="f30 flex_row jb">
                    <view class="ac_price">
                        ￥{{item.salePrice}}
                        <text class='unitMy' wx:if="{{item.unit}}">/{{item.unit}}</text>
                        起
                        <!-- <text class="sc_dw c99">/平方米</text> -->
                    </view>
                    <image catchtap="delcollectionGood" data-index="{{index}}" data-id="{{item.commodityId}}" class="hasScImg" src="../../../img/ysc.png" />
                </view>
            </view>
        </view>
    </view>
    <!-- </view> -->
</view>
<!-- 商家收藏 -->
<view wx:if="{{scTabIndex==1}}" class="shopSc boxs">
    <view class="shopSc_list flex_row al jb" data-id="{{item.merchantId}}" catchtap="handleTap1" wx:for="{{list}}" wx:key="index">
        <view class="flex_row al">
            <image class="sc_shopLogo" src="{{imgBaseUrl + item.logoUrl+'?x-image-process=image/resize,p_30'}}" />
            <view>
                <view class="f34 sc_shopName c33">{{item.merchantName}}</view>
                <view class="f28 c99 flex_row">
                    <view class="xsNum">销量{{item.salesVolume}}</view>
                    <view>共{{item.commodityNum}}件商品</view>
                </view>
            </view>
        </view>
        <view catchtap="delcollectionStore" data-index="{{index}}" data-id="{{item.merchantId}}" class='f28 cff cancleBtn'>
            取消收藏
        </view>
    </view>
</view>
<noData wx:if="{{list.length<1}}" />