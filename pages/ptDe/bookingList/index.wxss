/* pages/ptDe/bookingList/index.wxss */
.line {
  position: fixed;
  top: 0;
  z-index: 99;
}

.spell_group_list {
  padding: 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.spellGroupCell {
  margin: 35rpx 0 50rpx 0;
}

.userName{
  width: 250rpx;
}

.spellGroupCell .tx {
  width: 67rpx;
  height: 67rpx;
  border-radius: 100%;
  margin-right: 25rpx;
  flex-shrink: 0;
  /* background-color: cyan; */
}

.spellGroupCellNum{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  width: 78px;
}

.spellGroupCellNum .spellGroupCell_num {
  color: #D32E32;
}

.spellGroupCellNum .time {
  color: #D32E32;
}

.spellBtn {
  width: 111rpx;
  height: 42rpx;
  line-height: 42rpx;
  background: rgba(0, 157, 255, 1);
  opacity: 1;
  border-radius: 21px;
  margin-left: 55rpx;
}

/* 弹框 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100vh;
  background-color: black;
  opacity: 0.5;
}

.modal {
  position: fixed;
  z-index: 999;
  transform: translate(-50%, -50%);
  top: 50%;
  left: 50%;
  width: 682rpx;
  /* height: 1027rpx; */
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(112, 112, 112, 1);
  opacity: 1;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal .name{
  margin-top: 108rpx;
  overflow: hidden;
  width: 100%;
  height: 45rpx;
}

.modal .remain{
  margin-top: 39rpx;
}

.scroll-y{
  width: 100%;
  height: calc(179rpx * 3);
  margin-top: 30rpx;
  margin-bottom: 65rpx;
}

.modal .middle {
  height: 179rpx;
  box-sizing: border-box;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.12);
}

.close {
  width: 24rpx;
  height: 24rpx;
  top: 39rpx;
  right: 30rpx;
}

.avatar {
  width: 118rpx;
  height: 118rpx;
  border-radius: 50%;
  /* border: 3px solid #009DFF; */
  box-sizing: border-box;
  flex-shrink: 0;
  overflow: hidden;
}

.virtual {
  flex-shrink: 0;
  border-radius: 50%;
  border: 3px dashed #999;
  box-sizing: border-box;
  width: 159rpx;
  height: 159rpx;
  color: #C1C1C1;
  font-size: 80rpx;
}

.modal .add {
  width: 568rpx;
  height: 88rpx;
  background: rgba(0, 157, 255, 1);
  margin: 75rpx auto;
  border-radius: 40rpx;
}

.modal text {
  color: #D32E32;
}