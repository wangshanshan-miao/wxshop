/* pages/voucher/voucher.wxss */
page {
  background-color: #F8F8F8;
}

.coupon {
  position: relative;
  width: 723rpx;
  height: 225rpx;
  margin: 0rpx auto;
  /* box-sizing: border-box; */
  padding-top: 20rpx;
}

.coupon>image {
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: -1;
  width: 100%;
  height: 225rpx;
}

.coupon>.left {
  margin-left: 49rpx;
  margin-right: 53rpx;
  color: #fff;
  font-size: 66rpx;
  width: 160rpx;
}

.coupon>.left>text {
  font-size: 26rpx;
}

.coupon>.right {
  line-height: 53rpx;
}

.coupon>.right>.top {
  font-weight: bold;
}

.main {
  margin: 0 auto;
  background-color: #fff;
  width: 699rpx;
  height: 695rpx;
  overflow: hidden;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
  border-radius: 5px;
}

.main>.title {
  line-height: 52rpx;
  margin-left: 41rpx;
  margin-top: 21rpx;
}

.main>.img {
  width: 179rpx;
  height: 158rpx;
  display: block;
  margin: 88rpx auto;
}

.main>.destroy {
  width: 600rpx;
  height: 70rpx;
  margin: 102rpx auto;
}

.main>.destroy>.input {
  border: 1rpx solid #CECECE;
  width: 480rpx !important;
  height: 100%;
  padding: 0rpx 38rpx;
  color: #ccc;
}

.main>.destroy>.cancel {
  width: 120rpx;
  height: 100%;
  background: rgba(0, 157, 255, 1);
  opacity: 1;
  border-radius: 0px 5px 5px 0px;
}

