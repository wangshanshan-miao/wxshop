/* pages/index/lghd/lghd.wxss */
.list {
  margin: 42rpx auto 15rpx;
  width: 697rpx;
  height: 205rpx;
  overflow: hidden;
}

.list>.bg {
  z-index: -1;
  width: 100%;
  height: 100%;
}

.list .left {
  margin-left: 70rpx;
  margin-right: 60rpx;
  width: 160rpx;
}

.list .left {
  font-size: 66rpx;
  font-weight: bold;
}

/* .list .right{

} */

.list .right .top {
  font-size: 17rpx;
  background-color: #51B1F9;
  width: 67rpx;
  height: 28rpx;
  border-radius: 5rpx;
}

.list .right .middle {
  width: 360rpx;
  color: #484A59;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.list .right .bottom .text {
  color: #484A59;
  font-size: 19rpx;
  color: rgba(72, 74, 89, 1);
}

.list .right .bottom .buy {
  width: 105rpx;
  height: 39rpx;
  border: 3rpx solid rgba(211, 46, 50, 1);
  box-shadow: 0px 2rpx 26rpx rgba(0, 0, 0, 0.02);
  border-radius: 30rpx;
  color: #D32E32;
  font-size: 21rpx;
  /* margin-left: 90rpx; */
}

.button {
  width: 107rpx;
  height: 107rpx;
  border-radius: 50%;
  background-image: linear-gradient(#61B4FF, #0080F3);
  position: fixed;
  right: 25rpx;
  bottom: 250rpx;
  z-index: 9;
  font-size: 30rpx;
}

.button .text {
  width: 60rpx;
  height: 77rpx;
}

.mask {
  width: 100%;
  height: 100vh;
  opacity: 0.5;
  background-color: #000;
  z-index: 99;
  position: fixed;
  top: 0;
}

.modal {
  position: fixed;
  z-index: 999;
  /* transform: translate(-50%,-50%); */
  top: 50%;
  left: 50%;
  width: 682rpx;
  height: 695rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(112, 112, 112, 1);
  opacity: 1;
  border-radius: 20rpx;
  box-sizing: border-box;
}

.modal .header{
  width:100%;
  height: 84rpx;
  border-bottom: 1px solid #F6F6F6;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal .header .title{
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
}

.modal .header .close{
  width: 24rpx;
  right: 26rpx;
  top: 30rpx;
  height: 24rpx;
}


.content {
  width: 100%;
  height: cale(695-84)rpx;
  box-sizing: border-box;
  padding: 38rpx;
  overflow: hidden;
  color: #707070;
  line-height: 40rpx;
}