/* pages/index/lghd/lghd.wxss */
.list {
  margin: 0 auto 0rpx;
  width: 98%;
  height: 247rpx;
  overflow: hidden;
}

.list>.bg {
  z-index: -1;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.list .left {
  margin: 0 0 0 84rpx;
}
.list .right {
  margin: 0 74rpx 0 0;
}
/* .list .right{

} */

.list .right .bottom .buy {
  width: 139rpx;
  height: 57rpx;
  background: linear-gradient(129deg,#fca153 10%, #fb8a29 96%);
  border-radius: 30rpx;
  line-height: 57rpx;
  margin-bottom: 16rpx;
  /* margin-left: 90rpx; */
}
.middle {
  margin-bottom: 16rpx;
}
.mask {
  width: 100%;
  height: 100vh;
  opacity: 0.5;
  background-color: #000;
  z-index: 99;
  position: fixed;
  top: 0;
}

.modal {
  position: fixed;
  z-index: 999;
  /* transform: translate(-50%,-50%); */
  top: 50%;
  left: 50%;
  width: 682rpx;
  height: 695rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(112, 112, 112, 1);
  opacity: 1;
  border-radius: 20rpx;
  box-sizing: border-box;
}

.modal .header{
  width:100%;
  height: 84rpx;
  border-bottom: 1px solid #F6F6F6;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal .header .title{
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
}

.modal .header .close{
  width: 24rpx;
  right: 26rpx;
  top: 30rpx;
  height: 24rpx;
}


.content {
  width: 100%;
  height: cale(695-84)rpx;
  box-sizing: border-box;
  padding: 38rpx;
  overflow: hidden;
  color: #707070;
  line-height: 40rpx;
}

.num {
  color: #BBB8B8;
}