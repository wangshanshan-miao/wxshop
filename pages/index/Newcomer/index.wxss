/* pages/index/Newcomer/index.wxss */
.bg {
  height: 100%;
  width: 100%;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 1;
}

.couponList {
  width: 665rpx;
  height: 676rpx;
  background: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0px 3px 16px 0px #ff784d;
  z-index: 9;
  position: absolute;
  bottom: 164rpx;
  margin: 0 auto;
  left: 0;
  right: 0;
  padding: 30rpx;
  box-sizing: border-box;

}
.coupon{
  background: #FEF5E4;
  margin-bottom: 24rpx;
  border: 1px solid #ff784d;
  border-radius: 10rpx;
}
.coupon .left{
  width: 170rpx;
  color: #FF784D;
  padding: 20rpx;
  box-sizing: border-box;
  /* border-right: 1px dashed #FF784D; */
}
.coupon .left .num{
  font-size: 55rpx;
  padding: 0;
}
.coupon .right{
  flex: 1;
  width: 0;
  padding: 20rpx;
  box-sizing: border-box;
  color: #FF784D;
}
.coupon .right>view:first-child view{
  margin-bottom: 15rpx;
}
.receiveBtn {
  position: absolute;
  width: 750rpx;
  height: 130rpx;
  background: #ffffff;
  border-radius: 18px 18px 0px 0px;
  box-shadow: 0px -6px 14px 0px rgba(0, 0, 0, 0.06);
  bottom: 0;
  z-index: 9;
  justify-content: center;
}

.receiveBtn .btn {
  width: 431rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(129deg, #fca153 10%, #fb8a29 96%);
  border-radius: 40rpx;
}
.couponBtn{
  width: 133rpx;
  height: 54rpx;
  line-height: 54rpx;
  background: #ff7f11;
  box-shadow: 0px 3px 10px 0px rgba(0,0,0,0.08); 
  text-align: center;
  border-radius: 54rpx;
}
.split-line {
  position: relative;
  flex: 0 0 0;
  border-left: 1px dashed #FF784D;
  margin: -2px 5px -1px 3px;
  background: #fff;
  height: 188rpx;
  top: 1px;
}
.split-line:before, .split-line:after {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 8rpx;
  background: #fff;
  left: -9rpx;
  z-index: 1;
}
.split-line:before {
  border-radius: 0 0 8rpx 8rpx;
  top: 0;
}
.split-line:after {
  border-radius: 8rpx 8rpx 0 0;
  bottom: 0;
}