/* pages/self/invite/index.wxss */
.content {
  width: 100vw;
  height: 2462rpx;
  overflow: hidden;
}

.content>.img {
  width: 100%;
  height: 100%;
  z-index: -2;
}

.code {
  width: 690rpx;
  height: 452rpx;
  margin: 640rpx auto 0;
  overflow: hidden;
}

.code>.bg {
  z-index: -1;
  width: 100%;
  height: 100%;
}

.code>.title {
  font-size: 31rpx;
  height: 31rpx;
  margin: 58rpx auto 36rpx;
}

.code>.img {
  display: block;
  width: 186rpx;
  height: 186rpx;
  background-color: #ccc;
  position: relative;
  z-index: 9999;
  margin: 0 auto;
}

.code>.copy {
  margin: 34rpx auto;
  width: 220rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(0, 157, 255, 1);
  opacity: 1;
  border-radius: 30rpx;
  letter-spacing: 4rpx;
}

.tips{
  margin: 70rpx auto;
  width: 690rpx;
  height: 363rpx;
  overflow: hidden;
}

.tips>.img{
  z-index: -1;
  width: 100%;
  height: 100%;
}

.tips>.notice{
  box-sizing: border-box;
  padding: 0 23rpx 20rpx;
  line-height: 46rpx;
  bottom: 0;
  width: 100%;
  height: 180rpx;
}

.success{
  width: 690rpx;
  height: 846rpx;
  margin: 45rpx auto 0;
  overflow: hidden;
}

.success>.img{
  width: 100%;
  height: 100%;
}

.success>.container{
  background-color: #fff;
  width: 648rpx;
  height: 572rpx;
  margin: 0 auto;
  bottom: 28rpx;
  left: 21rpx;
  overflow: hidden;
}

.list1{
  padding:20rpx 43rpx;
  width: 100%;
  box-sizing: border-box;
}

.list1>.left{
  font-weight: bold;
}

