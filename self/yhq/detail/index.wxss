/* pages/self/yhq/detail/index.wxss */

.list {
  margin: 0 auto 0rpx;
  width: 98%;
  height: 247rpx;
  overflow: hidden;
}

.list>.bg {
  z-index: -1;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.list .left {
  margin: 0 0 0 84rpx;
}
.list .right {
  margin: 106rpx 74rpx 0 0;
  height: 100%;
}
.num {
  color: #BBB8B8;
}


page {
  background-color: #F8F8F8;
}

.coupon {
  position: relative;
  width: 697rpx;
  height: 205rpx;
  margin: 0rpx auto;
  /* box-sizing: border-box; */
  padding-top: 20rpx;
}

.coupon>image {
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: -1;
  width: 100%;
  height: 205rpx;
}

.coupon>.left {
  margin-left: 70rpx;
  margin-right: 57rpx;
  color: #fff;
  font-size: 66rpx;
  width: 160rpx;
}

.coupon>.left>text {
  font-size: 26rpx;
}

.coupon>.right {
  line-height: 53rpx;
}

.coupon>.right>.top>.top-left {
  width: 67rpx;
  height: 28rpx;
  font-size: 17rpx;
  background: linear-gradient(180deg, rgba(0, 144, 255, 1) 0%, rgba(78, 178, 255, 1) 100%);
  opacity: 1;
  border-radius: 5rpx;
}

.coupon>.right>.top>.top-right {
  margin-left: 215rpx;
  color: #B7B7B7;
}

.coupon>.right>.middle {
  margin: 10rpx 0;
  color: #484A59;
  line-height: 36rpx;
}

.main {
  margin: 20rpx auto;
  background-color: #fff;
  width: 699rpx;
  height: 552rpx;
  overflow: hidden;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
  border-radius: 5px;
}

.main>.title {
  line-height: 52rpx;
  margin-left: 41rpx;
  margin-top: 21rpx;
  color: #000000;
}

.main>.destroy {
  color: #707070;
  margin: 28rpx auto;
  width: 597rpx;
  white-space: normal;
  word-break: break-all;
  overflow: hidden;
}

.down {
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  padding: 0 30rpx 0 44rpx;
  width: 750rpx;
  height: 130rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -6rpx 14rpx rgba(0, 0, 0, 0.06);
  opacity: 1;
  border-radius: 18rpx 18rpx 0px 0px;
}

.down>.right {
  width: 431rpx;
  height: 88rpx;
  background: linear-gradient(129deg,#fca153 10%, #fb8a29 96%);
  opacity: 1;
  border-radius: 210rpx;
}

.evaluateDto {
  width: 699rpx;
  margin: 15rpx auto;
  padding-top: 15rpx;
}
.evaluateDto .title {
  margin-bottom: 22rpx;
}
.evaluateDto .content image {
  width: 76rpx;
  height: 76rpx;
  margin-right: 10rpx;
}
.jtr {
  width: 18rpx;
  height: 18rpx;
}
.stars {
  display: inline-block;
  margin-left: 37rpx;
}
.stars image {
  display: inline-block;
  width: 24rpx;
  height: 23rpx;
  margin-right: 7rpx;
}

/* .down>.left>.left-top>text{
  font-size: 22rpx;
} */

.down>.left>.left-top {
  color: #D32E32;
  font-size: 46rpx;
}

.down>.left>.left-down {
  color: #aaa;
}

.down .right {
  margin-left: 62rpx;
}


.modal {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100vh;
  background-color: black;
  opacity: 0.5;
}