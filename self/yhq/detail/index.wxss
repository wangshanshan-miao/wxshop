/* pages/self/yhq/detail/index.wxss */
page {
  background-color: #F8F8F8;
}

.coupon {
  position: relative;
  width: 697rpx;
  height: 205rpx;
  margin: 0rpx auto;
  /* box-sizing: border-box; */
  padding-top: 20rpx;
}

.coupon>image {
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: -1;
  width: 100%;
  height: 205rpx;
}

.coupon>.left {
  margin-left: 70rpx;
  margin-right: 57rpx;
  color: #fff;
  font-size: 66rpx;
  width: 160rpx;
}

.coupon>.left>text {
  font-size: 26rpx;
}

.coupon>.right {
  line-height: 53rpx;
}

.coupon>.right>.top>.top-left {
  width: 67rpx;
  height: 28rpx;
  font-size: 17rpx;
  background: linear-gradient(180deg, rgba(0, 144, 255, 1) 0%, rgba(78, 178, 255, 1) 100%);
  opacity: 1;
  border-radius: 5rpx;
}

.coupon>.right>.top>.top-right {
  margin-left: 215rpx;
  color: #B7B7B7;
}

.coupon>.right>.middle {
  margin: 10rpx 0;
  color: #484A59;
  line-height: 36rpx;
}

.main {
  margin: 20rpx auto;
  background-color: #fff;
  width: 699rpx;
  height: 695rpx;
  overflow: hidden;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
  border-radius: 5px;
}

.main>.title {
  line-height: 52rpx;
  margin-left: 41rpx;
  margin-top: 21rpx;
  color: #000000;
}

.main>.destroy {
  color: #707070;
  margin: 28rpx auto;
  width: 597rpx;
  white-space: normal;
  word-break: break-all;
  overflow: hidden;
}

.down {
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  padding: 0 26rpx;
  width: 750rpx;
  height: 130rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -6rpx 14rpx rgba(0, 0, 0, 0.06);
  opacity: 1;
  border-radius: 18rpx 18rpx 0px 0px;
}

.down>.right {
  width: 414rpx;
  height: 88rpx;
  background: #009DFF;
  opacity: 1;
  border-radius: 210rpx;
}

/* .down>.left>.left-top>text{
  font-size: 22rpx;
} */

.down>.left>.left-top {
  color: #D32E32;
  font-size: 46rpx;
}

.down>.left>.left-down {
  color: #aaa;
}

.down .right {
  margin-left: 62rpx;
}


.modal {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100vh;
  background-color: black;
  opacity: 0.5;
}