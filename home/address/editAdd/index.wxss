/* pages/address/editAdd/index.wxss */
/* 填写收货信息 */
.addAddress {
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 1);
}

.textarea {
  height: 161rpx !important;
}
.textarea textarea {
  width: 100%;
  height: calc(100% - 32rpx);
  padding-top: 32rpx;
}

.addAddress .list {
    height: 114rpx;
    box-sizing: border-box;
    margin: 0 auto;
    width: 93%;
    border-bottom: 1rpx solid rgba(0,0,0,0.12);
}

.addAddress .list input {
    color: #b9b9b9;
    font-size: 28rpx;
    text-align: right;
}
.list .image image {
  width: 84rpx;
  height: 51rpx;
  display: inline-block;
}

.addAddress .top,
.selectAddress .top {
    width: 100%;
    height: 84rpx;
}

.picker {
    color: #B9B9B9 !important;
}

.addAddress .sure {
    margin: 110rpx auto 0;
    width: 431rpx;
    height: 88rpx;
    background: linear-gradient(129deg,#fca153 10%, #fb8a29 96%);
    border-radius: 210rpx;
}

.addAddress .tips {
    overflow: hidden;
    color: #D32E32;
    text-align: center;
    margin: 20rpx auto;
}

