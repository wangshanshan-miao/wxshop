<!-- 搜索页面 -->
<view class="searchIndex">
    <view class="search_top flex_row al">
        <view class="pr search_topInput">
            <image class="seai pa" src="{{imgUrl+'seai.png'}}"></image>
            <input value="{{value}}" bindinput="input" class="searchInput f26 c33 boxs" placeholder="请输入搜索内容" />
            <image bindtap="clearAll" class="deli pa" src="{{imgUrl+'deli.png'}}" />
        </view>
        <view class="cancle f30" bindtap="searchResult">搜索</view>
    </view>
    <view class="history">
        <view class="flex_row history_top al jb">
            <view class='f30 c33'>历史搜索</view>
            <image catchtap="clearHistory" class="del_icon" src="{{imgUrl+'delete.png'}}" />
        </view>
        <view class="history_group flex_row">
            <view catchtap="handleTap" data-content="{{item}}" class="historyCell c99 f24" wx:for='{{historyArr}}' wx:key="index">
                {{item}}
            </view>
        </view>
    </view>
    <!-- 搜索结果 -->
    <view class="goods_group flex_row jb">
        <view data-id="{{item.commodityId}}" wx:for="{{arr}}" wx:key="index" class="goodsCell" catchtap="detail">
            <image class="goodImg" src="{{imgBaseUrl + item.coverUrl+'?x-image-process=image/resize,p_30'}}" mode="aspectFit|aspectFill|widthFix"></image>
            <view class="goods_title f26 c33 oh">{{item.commodityName}}</view>
            <view class="car_group flex_row al jb">
                <view class="flex_row al">
                    <view class="f36 good_money">
                        ￥{{item.salePrice}}
                        <text class='unitMy' wx:if="{{item.unit}}">/{{item.unit}}</text>
                        起
                    </view>
                    <!-- <view class="c99 f24">/平方米</view> -->
                </view>
                <image catchtap="addToCart" data-id="{{item.commodityId}}" class="good_buyCar" src="{{imgUrl+'car.png'}}" />
            </view>
        </view>
    </view>
</view>